<!DOCTYPE html>
<html ng-app="app">
<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/static/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/static/styles/font-awesome.min.css">
  <link rel="stylesheet" href="/static/styles/common.css">

  {% if shop != null %}
    {% if shop.theme != 'default' %}
      <link rel="stylesheet" href="/static/styles/themes/{{ shop.theme }}.css">
    {% endif %}
  {% endif %}
  <!-- <link rel="stylesheet" href="/static/styles/themes/cerulean.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/cosmo.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/flatly.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/journal.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/paper.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/readable.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/spacelab.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/united.css"> -->
  <!-- <link rel="stylesheet" href="/static/styles/themes/yeti.css"> -->

  <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

  <title>{% block tittle %}{% endblock %}</title>

</head>
<body>
  

  <div class="navbar-fixed-top">
    <nav class="navbar-admin" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse-admin">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="collapse-admin">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Temas <b class="caret"></b></a>
              <ul class="dropdown-menu">
                {% for theme in themes %}
                  <li>
                    <a href="javascript:void(0);" data-theme="{{ theme }}" onclick="changeTheme(this)">{{ theme }}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
    </nav>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">ShopJS CMS</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/">Inicio</a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Productos <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>
                  <a href="#">Categoria 1</a>
                </li>
                <li>
                  <a href="#">Categoria 2</a>
                </li>
                <li>
                  <a href="#">Categoria 2</a>
                </li>
                <li>
                  <a href="#">Categoria 3</a>
                </li>
              </ul>
            </li>
            <li>
              <a href="#">Servicios</a>
            </li>
            <li>
              <a href="#">Contacto</a>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container -->
    </nav>
    
  </div>

  {% block content %}{% endblock %}

  <footer>
    <div class="container">
      <div class="row">
        <ul class="footer-items">
          <li>
            <a href="#">Sobre Nosotros</a>
          </li>
          <li>
            <a href="/terminos-condiciones">Terminos y Condiciones</a>
          </li>
          <li>
            <a href="/cookies">Politica y Cookies</a>
          </li>
          <li>
            <a href="/faq">FAQ's</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 copyright">
        <div class="container">
          <p>Copyright &copy; ShopJS CMS 2016</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="/static/scripts/jquery.min.js"></script>
  <script src="/static/scripts/bootstrap.min.js"></script>
  <script src="/static/scripts/admin.js"></script>

  <script>
  $('.carousel').carousel({
      interval: 4000 //changes the speed
  })
  </script>
</body>
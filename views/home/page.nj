<div class="img-header">
  <img src="http://placehold.it/1200x400&text={{page.name}}" alt="">
</div>

<div class="container">
  <h1 class="page-header">{{page.name}}</h1>

  <div {% if user != null %} contenteditable="true" {% else %} contenteditable="false" {% endif %} id="page-content">
    {{page.content}}
  </div>
</div>



{% if user != null %}
  <script src="//cdn.ckeditor.com/4.5.9/full/ckeditor.js"></script>
  <script>
    CKEDITOR.inline('page-content');
  </script>
{% endif %}

<!DOCTYPE html>
<html ng-app="shopApp">
<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/static/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/static/styles/font-awesome.min.css">
  <link rel="stylesheet" href="/static/styles/common.css">

  {% if shop != null %}
    {% if shop.theme != 'default' %}
      <link rel="stylesheet" href="/static/styles/themes/{{ shop.theme }}.css">
    {% endif %}
  {% endif %}

  <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

  <title>{{ title }}</title>

</head>
<body>
  <div class="navbar-fixed-top">
    {% if user != null %}
      <div id="admin-navbar">
        <nav class="navbar-admin" id="navbar-admin" role="navigation">
          <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse-admin">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="collapse-admin">
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Temas <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    {% for theme in themes %}
                      <li {% if shop.theme == theme %} class="active" {% endif %}>
                        <a href="/cambiar-tema/{{ theme }}">{{ theme | capitalize }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categorias <b class="caret"></b></a>
                  <admin-categories></admin-categories>
                </li>
              </ul>
            </div>
            <!-- /.navbar-collapse -->
          </div>
        </nav>
      </div>
    {% endif %}

    <!-- Navigation -->
    <nav class="navbar navbar-inverse" role="navigation">
    {% include "./navbar.nj" %}
    </nav>
    
  </div>

  <div id="content">
    {{ content | safe }}
  </div>

  <footer>
    <div class="container">
      <div class="row">
        <ul class="footer-items">
          <li>
            <a href="#">Sobre Nosotros</a>
          </li>
          <li>
            <a href="/terminos-condiciones">Terminos y Condiciones</a>
          </li>
          <li>
            <a href="/cookies">Politica y Cookies</a>
          </li>
          <li>
            <a href="/faq">FAQ's</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 copyright">
        <div class="container">
          <p>Copyright &copy; ShopJS CMS 2016</p>
        </div>
      </div>
    </div>
  </footer>

  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="loginLabel">Acceso {{ shop.name }}</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <form method="POST" action="/login" id="loginForm" name="userForm" class="col-sm-6" novalidate>
              <div class="form-group" ng-class="{ 'has-error': userForm.email.$invalid && !userForm.email.$pristine }">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control input-sm" ng-model="user.email" required>
                <p ng-show="userForm.email.$invalid && !userForm.email.$pristine" class="help-block">Intoduce un email correcto</p>
              </div>
              <div class="form-group" ng-class="{ 'has-error': userForm.password.$invalid && !userForm.password.$pristine }">
                <label for="password">Contrase침a</label>
                <input type="password" id="password" name="password" class="form-control input-sm" ng-model="user.password" ng-minlength="6" required>
                <p ng-show="userForm.password.$error.minlength" class="help-block">La contrase침a debe contener al menos 6 caracteres</p>
              </div>
              <label id="login-error" class="label label-danger" style="display: none;">El usuario y la contrase침a no coinciden</label>
              <button type="submit" class="btn btn-primary" ng-disabled="userForm.$invalid">Iniciar Sesi칩n</button>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>


  <script src="/static/scripts/vendor/jquery.min.js"></script>
  <script src="/static/scripts/vendor/bootstrap.min.js"></script>
  <script src="/static/scripts/vendor/angular.js"></script>
  <script src="/node_modules/angular-ui-bootstrap/dist/ui-bootstrap-tpls.js"></script>
  <script src="/node_modules/angular-messages/angular-messages.min.js"></script>
  
  <script src="/static/scripts/app.js"></script>
  <script src="/static/scripts/auth/login.js"></script>
  <script src="/static/scripts/categories/categories.js"></script>
  <script src="/static/scripts/categories/add-category.js"></script>
  <script src="/static/scripts/categories/update-category.js"></script>
  <script src="/static/scripts/categories/admin-categories.js"></script>
  <script src="/static/scripts/validators/unique.js"></script>
  <script src="/static/scripts/reload.js"></script>
  <script src="/static/scripts/main.js"></script>

  <script>

    {% if user != null %} 
      angular.module('shopApp').constant('serverCategories', {{adminCategories | dump | safe}});
    {% else %} 
      angular.module('shopApp').constant('serverCategories', []);
    {% endif %}

  </script>
</body>
</html>